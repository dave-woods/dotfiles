# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Mod1+Left resize shrink width 1 px or 1 ppt
        bindsym Mod1+Down resize grow height 1 px or 1 ppt
        bindsym Mod1+Up resize shrink height 1 px or 1 ppt
        bindsym Mod1+Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
				# backtick key (`)
        bindsym $mod+grave mode "default"
}

# backtick key (`)
bindsym $mod+grave mode "resize"

# ctrl alt left/right
bindsym Control+Mod1+Left workspace prev
bindsym Control+Mod1+Right workspace next

# jump back to previous ws
workspace_auto_back_and_forth yes

# Prevents i3 from picking up keybindings
# useful if a program needs access to a shortcut defined here
mode "Passthrough - Press Alt+F12 to exit" {
	bindsym Mod1+F12 mode "default"
}
bindsym Mod1+F12 mode "Passthrough - Press Alt+F12 to exit"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status
	font pango:DejaVu Sans Mono, FontAwesome5Free, FontAwesome5Brands 11

	position top
	colors {
		background 			$u_border
		statusline 			$u_text
		separator 			$u_text

		focused_workspace 	$border 			$border 			$text
		active_workspace 		$u_text 	 		$u_text 	 		$u_border
		inactive_workspace 	$u_border 		$u_border 		$u_text
		urgent_workspace 		$urg_border 	$urg_border 	$text
	}

	tray_output primary
	strip_workspace_numbers yes
}

bindsym $mod+b bar mode toggle

